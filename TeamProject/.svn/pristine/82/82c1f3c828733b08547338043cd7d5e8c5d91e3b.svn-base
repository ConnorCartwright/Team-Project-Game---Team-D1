package weapon;

/**
 * The <code>Double Barrel Pistol</code> class defines how a <code>Double Barrel Pistol</code> will behave, e.g. how fast the 
 * projectiles fly, what the magazine size is, etc. The <code>Double Barrel Pistol</code> is a <code>Primary Weapon</code>.
 * 
 * @see PrimaryWeapon
 * @author Team D1
 * @author Connor Cartwright
 *
 */
public class DBarrelPistol extends PrimaryWeapon {

	public static final double accuracy = 84; // defines the set accuracy of this weapon
	public static final double damage = 45; // defines the set damage of this weapon
	public static final int cooldown = 1000; // defines the set time in ms between shots for this weapon
	public static final int range = 550; // defines the set range of this weapon
	public static final int numProjectiles = 2; // defines the number of projectiles fired on each shot for this weapon
	public static final double projectileSpeed = 25; // defines the projectile speed of this weapon
	public static final int reloadTime = 1000; // defines the reload time in ms of this weapon
	public static final int magSize = 8; // defines the magazine size of this weapon
	public static final int maxAmmo = 32; // defines the maximum ammo that can be held for this weapon
	
	public DBarrelPistol() {
		super(accuracy, damage, cooldown, range, numProjectiles,
				projectileSpeed, reloadTime, magSize, maxAmmo);
	}

}
