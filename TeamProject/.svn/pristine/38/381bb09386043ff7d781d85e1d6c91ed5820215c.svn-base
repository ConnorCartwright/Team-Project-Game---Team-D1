package weapon;

/**
 * The <code>Pistol</code> class defines how a <code>Pistol</code> will behave, e.g. how fast the projectiles
 * fly, what the magazine size is, etc. The <code>Pistol</code> is a <code>Secondary Weapon</code>.
 * 
 * @see SecondaryWeapon
 * @author Team D1
 * @author Connor Cartwright
 *
 */
public class Pistol extends SecondaryWeapon {
    public static final int weaponId = 2;
	public static final double accuracy = 85; // defines the set accuracy of this weapon
	public static final double damage = 14; // defines the set damage of this weapon
	public static final int cooldown = 380; // defines the set time in ms between shots for this weapon
	public static final int range = 450; // defines the set range of this weapon
	public static final int numProjectiles = 1; // defines the number of projectiles fired on each shot for this weapon
	public static final double projectileSpeed = 19; // defines the projectile speed of this weapon
	public static final int reloadTime = 640; // defines the reload time in ms of this weapon
	public static final int magSize = 10; // defines the magazine size of this weapon
	public static final int maxAmmo = 40; // defines the maximum ammo that can be held for this weapon
	
	/**
	 * Creating a new <code>Pistol</code> using the set fields defined above.
	 */
	public Pistol() {
	    super(weaponId,accuracy, damage, cooldown, range, numProjectiles,
                projectileSpeed, reloadTime, magSize, maxAmmo);
	}

}
