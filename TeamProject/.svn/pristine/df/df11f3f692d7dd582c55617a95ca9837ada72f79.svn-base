package weapon;

/**
 * The <code>Assault Rifle</code> class defines how a <code>Assault Rifle</code> will behave, e.g. how fast the 
 * projectiles fly, what the magazine size is, etc. The <code>Assault Rifle</code> is a <code>Primary Weapon</code>.
 * 
 * @see PrimaryWeapon
 * @author Team D1
 * @author Connor Cartwright
 *
 */
public class AssaultRifle extends PrimaryWeapon {
    public static final int weaponId = 0;
	public static final double accuracy = 79; // defines the set accuracy of this weapon
	public static final double damage = 40; // defines the set damage of this weapon
	public static final int cooldown = 300; // defines the set time in ms between shots for this weapon
	public static final int range = 800; // defines the set range of this weapon
	public static final int numProjectiles = 1; // defines the number of projectiles fired on each shot for this weapon
	public static final double projectileSpeed = 30; // defines the projectile speed of this weapon
	public static final int reloadTime = 800; // defines the reload time in ms of this weapon
	public static final int magSize = 25; // defines the magazine size of this weapon
	public static final int maxAmmo = 100; // defines the maximum ammo that can be held for this weapon
	
	/**
	 * Creating a new <code>Assault Rifle</code> using the set fields defined above.
	 */
	public AssaultRifle() {
	    super(weaponId,accuracy, damage, cooldown, range, numProjectiles,
                projectileSpeed, reloadTime, magSize, maxAmmo);
	}

}
