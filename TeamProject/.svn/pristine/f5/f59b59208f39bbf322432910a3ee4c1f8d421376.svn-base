package weapon;

/**
 * The <code>Sniper</code> class defines how a <code>Sniper</code> will behave, e.g. how fast the projectiles
 * fly, what the magazine size is, etc. The <code>Sniper</code> is a <code>Primary Weapon</code>.
 * 
 * @see PrimaryWeapon
 * @author Team D1
 * @author Connor Cartwright
 *
 */
public class SniperRifle extends PrimaryWeapon {
    public static final int weaponId = 5;
	public static final double accuracy = 96; // defines the set accuracy of this weapon
	public static final double damage = 99; // defines the set damage of this weapon
	public static final int cooldown = 2000; // defines the set time in ms between shots for this weapon
	public static final int range = 1500; // defines the set range of this weapon
	public static final int numProjectiles = 1; // defines the number of projectiles fired on each shot for this weapon
	public static final double projectileSpeed = 50; // defines the projectile speed of this weapon
	public static final int reloadTime = 3000; // defines the reload time in ms of this weapon
	public static final int magSize = 5; // defines the magazine size of this weapon
	public static final int maxAmmo = 20; // defines the maximum ammo that can be held for this weapon
	
	/**
	 * Creating a new <code>Sniper</code> using the set fields defined above.
	 */
	public SniperRifle() {
	    super(weaponId,accuracy, damage, cooldown, range, numProjectiles,
                projectileSpeed, reloadTime, magSize, maxAmmo);
	}

}
